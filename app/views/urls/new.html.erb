<div class="container">
  <h1 class="text-4xl font-bold">Create New Short URL</h1>

  <%= form_with(model: @url, data: { turbo: false } ) do |f| %>
    <div class="flex flex-col">
      <%= f.label :original_url, class: "font-bold" %>
      <%= f.text_field :original_url, class: "input" %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Short URL', class: "save-btn" %>
    </div>
  <% end %>

  <div class="mt-10">
    <%= link_to 'Back', root_path, class: "back-btn" %>
  </div>
</div>